generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model blog {
  id String @id @default(cuid())
  title String
  slug String @unique
  contents String
  tags String[]
  likes Int @default(0)
  createdAt DateTime
  updatedAt DateTime
}
